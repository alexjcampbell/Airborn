@using Airborn.web.Models
@model ScenarioPageModel

@{
    ViewData["Title"] = "Takeoff and Landing Calculator";
}

<br />



<form asp-action="Calculate" method="post" clas="form-inline">


    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <h5>Tell Us About Your Flight</h5>
    <br/>

     <div class="form-group row g-3 align-items-center">
        <label asp-for="AirportIdentifier" class="col-sm-2 col-form-label">Airport: *</label>
        <div class="col-sm-2">
            <input asp-for="AirportIdentifier" class="form-control" autocomplete="off" id="AirportIdentifier"/>
        </div>

        <div class="col-sm-1">
        </div>        
        <label asp-for="RunwayIdentifier" class="col-sm-2 col-form-label">Runway: *</label>
        <div class="col-sm-2">
            <select asp-for="RunwayIdentifier" class="form-control" >
                @foreach (Runway runway in Model?.Runways) 
                    {<option value="@runway.RunwayIdentifier_Primary">@runway.RunwayIdentifier_Primary</option>
                    <option value="@runway.RunwayIdentifier_Secondary">@runway.RunwayIdentifier_Secondary</option>}
                
            </select>
        </div>       

        @section Scripts{
            <script>
                $(document).ready(function () {
                    $('#AirportIdentifier').autocomplete({
                        source: '/Home/AutocompleteAirportIdentifier',
                        minLength: 2,
                        select: function (event, ui) {

                        $.ajax({  
                            type: "POST",  
                            url: "/Home/PopulateRunways?airportIdentifier=" + ui.item.label,  
                            data: "{}",  
                            success: function (data) {  
                                var s = '<option value="-1">Select...</option>';  
                                for (var i = 0; i < data.length; i++) {  
                                    s += '<option value="' + data[i].label + '">' + data[i].label + '</option>';  
                                }  
                                $("#RunwayIdentifier").html(s);  

                            $.ajax({  
                                type: "POST",  
                                url: "/Home/GetAirportInformation?airportIdentifier=" + ui.item.label,  
                                data: "{}",  
                                success: function (data) {  
                                    $("#FieldElevation").val(data.fieldElevation);  
                                }  
                            });   


                            }  
                        });                             

                            //If you want to do something on the select event, you may do it here
                            //$("#tags").html(ui.item.label);
                        }
                    });

                    $('#RunwayIdentifier').on('change', function() {               
                        if ($("#RunwayIdentifier").val() != -1) {                                
                            $.ajax({
                                url: '/Home/GetRunwayDetail?airportIdentifier=' + $('#AirportIdentifier').val() + "&runwayId=" + $(this).val(),
                                type: 'POST',
                                success: function (response){                      
 
                                    $("#RunwayLength").val(response.runwayLength.valueOf());
                                    
                                    if($("#RunwayIdentifier option:selected").val() == response.runwayIdentifier_Primary.valueOf() )
                                    {
                                        $("#RunwayHeading").val(response.runwayIdentifier_Primary.valueOf().substring(0,2) * 10);
                                    }
                                    else
                                    {
                                        $("#RunwayHeading").val(response.runwayIdentifier_Secondary.valueOf().substring(0,2) * 10);
                                    }

                                },
                                error: function (xhr) {
                                    alert("Something went wrong, please try again");
                                }
                            });
                        }

                    });
                });
            </script>
        }         
    </div>    

     <div class="form-group row g-3 align-items-center">
        <label asp-for="ScenarioType" class="col-sm-2 col-form-label">Scenario: *</label>
        <div class="col-sm-2">
            <select asp-for="ScenarioType" class="form-control" >
                <option value="Takeoff">Takeoff</option>
                <option value="Landing">Landing</option>
            </select>
        </div>
        <div class="col-sm-1">
        </div>        
        <label asp-for="AircraftType" class="col-sm-2 col-form-label">Aircraft Type: *</label>
        <div class="col-sm-2">
            <select asp-for="AircraftType" class="form-control" >
                <option value="SR22_G2">Cirrus SR22  G2</option>
            </select>
        </div>        
    </div>
 
    <div class="form-group row g-3 align-items-center">
        <label asp-for="RunwayHeading" class="col-sm-2 col-form-label">Runway Heading: *</label>
        <div class="col-sm-2">
            <input asp-for="RunwayHeading" class="form-control" maxlength="10" C
            data-val-required="Runway Heading is required"/>
        </div>
        <div class="col-sm-1">
            °M
        </div>             
        <label asp-for="FieldElevation" class="col-sm-2 col-form-label">Field Elevation: *</label>
        <div class="col-sm-2">
            <input asp-for="FieldElevation" class="form-control" maxlength="10" />
        </div>
        <div class="col-sm-1">
            ft
        </div>
    </div>
    <div class="form-group row g-3 align-items-center">       
       <label asp-for="RunwayLength" class="col-sm-2 col-form-label">Runway Length:</label>
        <div class="col-sm-2">
            <input asp-for="RunwayLength" class="form-control" maxlength="10" />
        </div>
        <div class="col-sm-1">
            ft
        </div>        
        <label asp-for="MagneticVariation" class="col-sm-2 col-form-label">Magnetic Variation:</label>
        <div class="col-sm-2">
            <input asp-for="MagneticVariation" class="form-control" maxlength="10" />
        </div>
        <div class="col-sm-1">
            °
        </div>          
    </div>    
    <div class="form-group row g-3 align-items-center">
        <label asp-for="WindDirectionMagnetic" class="col-sm-2 col-form-label">Wind Direction: *</label>
        <div class="col-sm-2">
            <input asp-for="WindDirectionMagnetic" class="form-control" maxlength="10" />
        </div>
        <div class="col-sm-1">
            °M
        </div>                  
        <label asp-for="WindStrength" class="col-sm-2 col-form-label">Wind Strength: *</label>
        <div class="col-sm-2">
            <input asp-for="WindStrength" class="form-control" maxlength="10" />
        </div>
        <div class="col-sm-1">
            kts
        </div>                
    </div>
    <div class="form-group row g-3 align-items-center">
        <label asp-for="Temperature" class="col-sm-2 col-form-label">Temperature: *</label>
        <div class="col-sm-2">
            <input asp-for="Temperature" class="form-control" maxlength="10" />
        </div>
        <div class="col-sm-1">
            <select style="width:auto;" asp-for="TemperatureType" class="form-control" >
                <option value="C">°C</option>
                <option value="F">°F</option>
            </select>            
        </div>             
        <label asp-for="AltimeterSetting" class="col-sm-2 col-form-label">Altimeter Setting: *</label>
        <div class="col-sm-2">
            <input asp-for="AltimeterSetting" class="form-control" maxlength="10" />
        </div>
        <div class="col-sm-1">
            <select style="width:auto;" asp-for="AltimeterSettingType" class="form-control" >
                <option value="MB">mb</option>
                <option value="HG">Hg</option>
            </select>
        </div>           
    </div>

    <div class="form-group row g-3 align-items-center">
        <div class="col-sm-3">
            <button type="submit" class="btn btn-primary">Calculate Performance</button>
        </div>
    </div>

    <br />

    <h5>Our Calculations</h5>
    <br/>

    <div class="form-group row g-3 align-items-center">
        <div class="col-sm-2">
            Ground Roll:
        </div>
        <div class="col-sm-2">
            @Html.TextBoxFor(s => s.Distance_GroundRoll, "{0:0.00}", new { @readonly="readonly", @class="form-control" })
        </div>
        <div class="col-sm-1">
            ft
        </div>           

        <div class="col-sm-2">
            % Runway Used:
        </div>
        <div class="col-sm-2">
            @Html.TextBoxFor(s => s.PercentageRunwayUsed_GroundRoll, "{0:p0}", new { @readonly="readonly", @class="form-control" })
        </div>
        <div class="col-sm-1">
            %
        </div>

    </div>

    <div class="form-group row g-3 align-items-center">

        <div class="col-sm-2">
            50' Obstacle:
        </div>
        <div class="col-sm-2">
            @Html.TextBoxFor(s => s.Distance_Clear50Ft, "{0:0.00}", new { @readonly="readonly", @class="form-control" })
        </div>
        <div class="col-sm-1">
            ft
        </div>        
        <div class="col-sm-2">
            % Runway Used:
        </div>
        <div class="col-sm-2">
            @Html.TextBoxFor(s => s.PercentageRunwayUsed_DistanceToClear50Ft, "{0:p0}", new { @readonly="readonly", @class="form-control" })
        </div>
        <div class="col-sm-1">
            %
        </div>
    </div>

    <div class="form-group row g-3 align-items-center">
        <div class="col-sm-2">
            @Model.CrosswindComponentText Crosswind:
        </div>
        <div class="col-sm-2">
            @Html.TextBoxFor(s => s.CrosswindComponentAbs, "{0:0.00}", new { @readonly="readonly", @class="form-control" })
        </div>
        <div class="col-sm-1">
            kts 
        </div>           
        <div class="col-sm-2">
            @Model.HeadwindComponentText:
        </div>
        <div class="col-sm-2">
            @Html.TextBoxFor(s => s.HeadwindComponentAbs, "{0:0.00}", new { @readonly="readonly", @class="form-control" })
        </div>
        <div class="col-sm-1">
            kts 
        </div>
    </div>


    <div class="form-group row g-3 align-items-center">
        <div class="col-sm-2">
            Pressure Altitude:
        </div>
        <div class="col-sm-2">
            @Html.TextBoxFor(s => s.PressureAltitude, "{0:0.00}", new { @readonly="readonly", @class="form-control" })
        </div>
        <div class="col-sm-1">
            ft
        </div>            
        <div class="col-sm-2">
            Density Altitude:
        </div>
        <div class="col-sm-2">
            @Html.TextBoxFor(s => s.DensityAltitude, "{0:0.00}", new { @readonly="readonly", @class="form-control" })
        </div>
        <div class="col-sm-1">
            ft
        </div>
    </div>

</form>

<br />