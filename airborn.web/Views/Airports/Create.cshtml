@model Airborn.web.Models.Airport

@{
    ViewData["Title"] = "Airports";
}

<br />

<div class="jumbotron">
    <h4 class="display-4"><b><i>Create airport</i></b></h4>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ident" class="control-label"></label>
                <input asp-for="Ident" class="form-control" />
                <span asp-validation-for="Ident" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FieldElevation" class="control-label"></label>
                <input asp-for="FieldElevation" class="form-control" />
                <span asp-validation-for="FieldElevation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MagneticVariation" class="control-label"></label>
                <input asp-for="MagneticVariation" class="form-control" />
                <span asp-validation-for="MagneticVariation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
